<nav class="navbar" >
    <div class="container-fluid text-light py-3">
    <%= link_to '🏠', categories_path %>
    </div>
</nav>
<div class="container categories ">

    <h1 class="text-center mt-2"> Add a Transaction </h1>

    <%= form_with url:'/budgets', data: { turbo: false } do |form| %>
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= form.label :amount %>
            <%= form.number_field :amount, :required => "required", autofocus: true, min: 0, step: 0.01, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :category_id %>
            <%= form.select :category_id, @categories.collect { |category| [category.name,category.id] }, { :prompt => 'Select Category'}, class: "form-select", required: true %>
        </div>

        <div class="form-group text-center mt-3">
            <%= form.submit 'Add Transaction', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>
