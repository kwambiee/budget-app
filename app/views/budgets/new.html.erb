<h1> Add a Transaction </h1>

<%= form_with model: @budget, url: budgets_path, method: :post, data: { turbo: false } do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :amount %>
        <%= form.text_field :amount, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :category_id %>
        <%= form.select :category_id, @categories, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.submit 'Add Transaction', class: 'btn btn-primary' %>
    </div>
<% end %>

<%= link_to 'Back to Categories', categories_path %>