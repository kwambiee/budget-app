<div class="container">
<h2 class="text-center pt-4">Add new Category</h2>
    <%= form_with model: @category, url: categories_path, method: :post, data: { turbo: false } do |form| %>
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.label :icon %>
            <%= form.text_field :icon, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.submit 'Add Category', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>
<%= link_to 'Back to Categories', categories_path %>

